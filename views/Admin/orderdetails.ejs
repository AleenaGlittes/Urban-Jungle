var status = $('.status:checked').text().trim()
console.log(status);

var data = {
	"orderid":orderid,
	"status":status
}

    $.ajax({
      url: '/admin/statusupdate',
      method: "post", 
      data:data,
      success: function(response) {
        if (response.message == "1") {
            Swal.fire({
