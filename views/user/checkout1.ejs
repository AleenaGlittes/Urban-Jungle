        <script>
$(document).ready(function () {
  update_amounts();

  // Trigger update_amounts() whenever the discount value changes
  $('#discount').on('input', update_amounts);

  function update_amounts() {
    let subtotal = 0;
    $("#protable > tbody > tr").each(function () {
      let price = $(this)
        .find(".proprice")
        .text()
        .replace(/[^\d\.]/g, "");
      let total = parseFloat(price);
      subtotal += total;
    });

    let discountText = $('#discount').html().trim();
    let couponrs = 0;
    
    // Extract the discount amount from the discountText
    if (discountText.startsWith("₹")) {
      couponrs = parseFloat(discountText.substr(1).replace(/[^\d\.]/g, ""));
    }

    let total = subtotal - couponrs;
    let finalTotal = total > 0 ? total.toFixed(2) : 0.00;

    $("#subtotal").text("₹" + subtotal.toFixed(2));
    $("#discount").html("₹" + couponrs.toFixed(2));
    $("#finaltotal").text("₹" + finalTotal);
  }
});

